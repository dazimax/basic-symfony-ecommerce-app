{% extends 'base.html.twig' %}

{% block title %}Books Categories{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-5 justify-content-center">
            <h2>Books Categories</h2>
        </div>
        <div class="row col-12">
            <div class="col-lg-12 mt-1 col-sm-12">
                <div class="row justify-content-center">
                {% for category in categories %}
                    <div class="card box-shadow box-book mb-3 col-lg-3 col-sm-12">
                        <div class="row no-gutters">
                            <div class="col-md-12 result-item">
                                <div class="card-body">
                                    <a class="category-title" href="{{ path('category_product_show', {'categoryId': category.id}) }}">
                                        <div class="row category-content justify-content-center">
                                            <h3 class="card-title">{{ category.name }}</h3>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                <div class="row">
                    <h4>No Categories Found!</h4>
                </div>
                {% endfor %}
                </div>
            </div>
        </div>    
    </div>
{% endblock %}
