{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="container">
    <div class="row col-12">
        <div class="col-lg-12 mt-1 col-sm-12">
            <div class="row justify-content-center">
                <div class="card box-shadow box-book mb-3 col-12">
                    <div class="row no-gutters">
                        <div class="col-md-12 result-item">
                            <div class="book-details card-body">
                                <div class="book-image col-6 justify-content-center">
                                    <img src="/images/books/{{ product.bookImage }}" class="card-img" alt="{{ product.bookName }}">
                                </div>
                                <div class="book-details-content col-6">
                                    <h3 class="card-title">{{ product.bookName }}</h3>
                                    <p class="card-text">
                                        Book by {{ product.bookAuthor }} <br/>
                                        <b>Category {{ categoryDetails.name }}</b><br/>
                                        <b>Price ${{ product.bookPrice }}</b>
                                    </p>
                                    <div class="row justify-content-left">
                                        <div class="input-group mb-1 mt-1 col-4">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1">Quantity</span>
                                            </div>
                                            <input value="1" type="text" name="qty" class="form-control book-qty" placeholder="Book Qty" aria-describedby="basic-addon1" />
                                        </div>
                                    </div>
                                    <a data-token="{{ csrf_token(product.id) }}" class="add-to-cart-button btn btn-secondary" data-id="{{ product.id }}" href="#">Add to Cart</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</div>
{% endblock %}
